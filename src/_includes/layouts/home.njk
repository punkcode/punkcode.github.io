{% extends "./base.njk" %}

{%- block main %}
  <section>
    {{ content | safe }}
  </section>
  <nav>
    {% set navPages = collections.all | eleventyNavigation %}
    {%- for entry in navPages %}
      <section class="text-center">
        <h1><a href="{{ entry.url | url }}">{{ entry.title }}</a></h1>
        <p>{{ entry.excerpt }}</p>
      </section>
      <hr />
    {% endfor -%}
  </nav>
{% endblock -%}