{
  "name": "punkcode.github.io",
  "version": "0.0.1",
  "description": "A website for Punk Code.",
  "main": "index.js",
  "author": "Christoffer Lagerstedt",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf _site && rimraf _tmp",
    "build": "npm-run-all clean build:html build:css",
    "build:css": "cross-env NODE_ENV=production & postcss src/styles/style.css --o _site/style.css && cleancss _site/style.css -o _site/style.css",
    "build:html": "cross-env ELEVENTY_PRODUCTION=true & eleventy",
    "watch": "npm-run-all --parallel watch:html watch:css",
    "watch:css": "postcss src/styles/style.css --o _tmp/style.css --watch",
    "watch:html": "eleventy --serve",
    "deploy": "gh-pages -d _site"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-navigation": "^0.2.0",
    "autoprefixer": "^10.2.5",
    "clean-css-cli": "^5.2.2",
    "cross-env": "^7.0.3",
    "gh-pages": "^3.1.0",
    "html-minifier": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.10",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.1",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.1.1"
  }
}
