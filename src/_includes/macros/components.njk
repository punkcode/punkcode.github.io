{% macro card(title, text, goToLink, goToText) %}
  <section class="border border-penguin-black dark:border-penguin-tan flex flex-col">
    <h2 class="p-2 penguin-header with-stroke text-2xl md:text-3xl lg:text-4xl">{{ title }}</h2>
    <p class="p-2 flex-1 text-base md:text-lg">{{ text }}</p>
    <a href="{{ goToLink }}" class="p-2 place-self-end">{{ goToText }}</a>
  </section>
{% endmacro %}